{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@/*": ["src/*"],
      "@/router": ["src/router"],
      "@/api/*": ["src/api/*"],
      "@/libs/*": ["src/libs/*"],
      "@/prisma": ["src/libs/prisma"],
      "@/lib": ["src/libs/lib"]
    }
  },
  "include": ["src/**/*", "tests/**/*"]
}
